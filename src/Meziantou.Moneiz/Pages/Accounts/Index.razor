@page "/accounts"
@inject DatabaseProvider DatabaseProvider
@inject ConfirmService ConfirmService

<h1>Accounts</h1>

<div class="toolbar">
    <a class="btn" href="/accounts/create">Create an account</a>
</div>

<Repeater Items="@database?.Accounts.Sort()">
    <RepeaterContainerTemplate>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Currency</th>
                    <th></th>
                </tr>
            </thead>
            @context
        </table>
    </RepeaterContainerTemplate>

    <ItemTemplate Context="account">
        <tr>
            @if (account.Closed)
            {
                <td>@account (<i class="fas fa-times"></i> closed)</td>
            }
            else
            {
                <td>@account</td>
            }
            <td>@account.CurrencyIsoCode</td>
            <td class="commands">
                <Dropdown>
                    <DropdownItem><a class="view-transactions" href="/accounts/@account.Id/transactions"><i class="fas fa-search"></i> View Transactions</a></DropdownItem>
                    <DropdownItem><button type="button" class="btn-link" @onclick="() => MoveUp(account)"><i class="fas fa-arrow-up"></i> Move up</button></DropdownItem>
                    <DropdownItem><button type="button" class="btn-link" @onclick="() => MoveDown(account)"><i class="fas fa-arrow-down"></i> Move down</button></DropdownItem>
                    <DropdownItem><a class="edit" href="/accounts/@account.Id/edit"><i class="fas fa-pencil-alt"></i> Edit</a></DropdownItem>
                    <DropdownItem><button type="button" class="btn-link" @onclick="() => Delete(account)"><i class="fas fa-trash" style="color: red"></i> Delete</button></DropdownItem>
                </Dropdown>
            </td>
        </tr>
    </ItemTemplate>
</Repeater>

@code {
    Database database;

    protected override async Task OnInitializedAsync()
    {
        database = await DatabaseProvider.GetDatabase();
    }

    public async Task MoveUp(Account account)
    {
        database.MoveUpAccount(account);
        await DatabaseProvider.Save();
    }

    public async Task MoveDown(Account account)
    {
        database.MoveDownAccount(account);
        await DatabaseProvider.Save();
    }

    public async Task Delete(Account account)
    {
        if (await ConfirmService.Confirm($"Do you really want to delete '{account}'?"))
        {
            database.RemoveAccount(account);
            await DatabaseProvider.Save();
        }
    }
}