@page "/categories"
@inject IDatabaseProvider DatabaseProvider
@inject ConfirmService ConfirmService

<h1>Categories</h1>

<div class="toolbar">
    <a class="btn" href="/categories/create">Create category</a>
</div>

<Repeater Items="@database?.Categories.OrderBy(c => c.GroupName).ThenBy(c => c.Name)">
    <RepeaterContainerTemplate>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            @context
        </table>
    </RepeaterContainerTemplate>

    <ItemTemplate Context="category">
        <tr>
            <td>@category</td>
            <td class="commands">
                <Dropdown>
                    <DropdownItem><a class="view-transactions" href="/categories/@category.Id/transactions">View Transactions</a></DropdownItem>
                    <DropdownItem><a class="edit" href="/categories/@category.Id/edit">Edit</a></DropdownItem>
                    <DropdownItem><button type="button" class="btn-link" @onclick="() => Delete(category)">Delete</button></DropdownItem>
                </Dropdown>
            </td>
        </tr>
    </ItemTemplate>
</Repeater>

@code {
    Database database;

    protected override async Task OnInitializedAsync()
    {
        database = await DatabaseProvider.GetDatabase();
    }

    private async Task Delete(Category category)
    {
        if (await ConfirmService.Confirm($"Do you really want to delete '{category}'?"))
        {
            database.RemoveCategory(category);
            await DatabaseProvider.Save();
        }
    }
}